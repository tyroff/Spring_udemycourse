create table person(
    id int PRIMARY KEY GENERATED BY DEFAULT AS IDENTITY,
    name varchar(250),
    age int
)

insert into person(name, age) values ('Person_1', 39);
insert into person(name, age) values ('Person_2', 22);
insert into person(name, age) values ('Person_3', 44);

create table passport (
    id int PRIMARY KEY GENERATED BY DEFAULT AS IDENTITY,
    passport_number int not null,
    person_id int UNIQUE references person(id) on DELETE cascade
);
