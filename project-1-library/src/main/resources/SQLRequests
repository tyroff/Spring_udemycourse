create table person(
    id int GENERATED BY DEFAULT AS IDENTITY primary key,
    name varchar(100) not null unique,
    year_birth int not null check (year_birth > 1970)
);

INSERT INTO person (name, year_birth) VALUES
	('Name Name Name', 1987),
	('Игнатюк Игнат Игнатович', 2000);

create table book(
    id int GENERATED BY DEFAULT AS IDENTITY primary key,
    name varchar(100) not null unique,
    author varchar(100) not null,
    year_publication int not null,
    person_id int default null,
    FOREIGN KEY (person_id) REFERENCES Person (id) ON DELETE SET NULL
);

INSERT INTO book (name, author, year_publication) VALUES
	('Азбука', 'Народный фольклёр', 2000),
	('Вторая', 'Майямо Анфиса Амоматова', 2011),
	('И синяя', 'Красный Ан Три', 1999);

