create table Person(
    id int GENERATED BY DEFAULT AS IDENTITY primary key,
    name varchar(100) not null unique,
    year_birth int not null check (year_birth > 1970)
)

create table Book(
    id int GENERATED BY DEFAULT AS IDENTITY primary key,
    name varchar(100) not null unique,
    author varchar(100) not null,
    year_publication int not null
)